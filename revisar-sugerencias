<body>
  <h1><span class="azul">Sugerencias</span> <span class="rojo">Recibidas</span></h1>
  <div class="contenedor">
    <table id="tablaSugerencias">
      <thead>
        <tr><th>Fecha</th><th>Sugerencia</th></tr>
      </thead>
      <tbody>
        <tr><td colspan="2" style="text-align:center;">Cargando sugerencias...</td></tr>
      </tbody>
    </table>
    <button onclick="window.location.href='admin.html'">Volver al panel</button>
  </div>

  <script>
    const SUGERENCIAS_URL = 'https://script.google.com/macros/s/AKfycbxCYqKvptGIwAaVN9ylHKD1MeCMF3qCmqqjtRGmF7JTuQsitLxWleDsrq9aN8IywEiu/exec';

    fetch(SUGERENCIAS_URL)
      .then(res => res.json())
      .then(data => {
        const tbody = document.querySelector('#tablaSugerencias tbody');
        tbody.innerHTML = '';

        if (data.length === 0) {
          tbody.innerHTML = '<tr><td colspan="2" style="text-align:center;">No hay sugerencias disponibles.</td></tr>';
          return;
        }

        data.forEach(s => {
          const tr = document.createElement('tr');
          tr.innerHTML = `<td>${s.fecha}</td><td>${s.sugerencia}</td>`;
          tbody.appendChild(tr);
        });
      })
      .catch(err => {
        document.querySelector('#tablaSugerencias tbody').innerHTML = '<tr><td colspan="2">‚ùå Error al cargar sugerencias.</td></tr>';
        console.error('Error al obtener sugerencias:', err);
      });
  </script>
</body>
